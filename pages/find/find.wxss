
.body{
  width: 100%;
}
.body ul li .nav{
  width: 100%;
  height: 150px;
  border-bottom: 1px solid rgba(0, 0, 0, .5);
  margin-top: 15px;
}
.body ul li .nav .blocken{
  width: 50%;
  height: 150px;
  float: left;
}
.body ul li .nav .texts{
  width: 50%;
  height: 150px;
  float: right;
}
.text view{
  width: 154px;
  text-align: center;
  margin-left: 10px;
}
.texts .title{
  height: 55px;
  line-height: 55px;
  font-size: 30px;
  font-family: "宋体";
}
.texts .description,.position{
  height: 30px;
  line-height: 30px;
  font-size: 14px;
}
.texts .price{
  height: 35px;
  line-height: 35px;
  size: 20px;
  color: blue;
}
.texts .title,.description,.position,.price{
   white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}